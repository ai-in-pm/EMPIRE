{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          { "type": "docs", "release": false },
          { "scope": "no-release", "release": false },
          { "type": "refactor", "release": "patch" },
          { "type": "chore", "release": "patch" },
          { "type": "test", "release": false },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": false },
          { "type": "style", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "web/package.json",
          "web_static/package.json",
          "web/app/api/version/route.ts",
          "web/app/(frontend)/components/version-indicator.tsx",
          "src-tauri/Cargo.toml",
          "src-tauri/tauri.conf.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@codedependant/semantic-release-docker",
      {
        "dockerProject": "cahaseler/empact"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "yarn install && export TAURI_FIPS_COMPLIANT=true && cd src-tauri && yarn tauri build --runner cargo-xwin --target x86_64-pc-windows-msvc"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "src-tauri/target/release/bundle/nsis/EMPACT_{nextRelease.version}_x64-setup.exe",
            "label": "Windows EXE installer"
          }
        ],
        "addReleases": "bottom"
      }
    ]
  ]
}
