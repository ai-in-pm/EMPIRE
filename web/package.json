{
  "name": "empact_web",
  "version": "1.0.5",
  "license": "CC-BY-4.0",
  "description": "Environment and Maturity Program Assessment and Control Tool",
  "keywords": [
    "Earned Value",
    "Project Management"
  ],
  "repository": "https://github.com/cahaseler/EMPACT",
  "homepage": "https://github.com/cahaseler/EMPACT",
  "bugs": "https://github.com/cahaseler/EMPACT/issues",
  "author": {
    "name": "cahaseler",
    "url": "https://github.com/cahaseler"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && Xcopy public \".next/standalone/public\" /I && Xcopy \".next/static\" \".next/standalone/.next/static\" /I",
    "build-linux": "next build && cp -rf public \".next/standalone/public\" && cp -rf \".next/static\" \".next/standalone/.next/static\"",
    "start": "node .next/standalone/server.js",
    "lint": "next lint"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "next": "14.2.3"
  },
  "devDependencies": {
    "typescript": "5.4.5",
    "@types/node": "20.12.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.3",
    "eslint": "9.3.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsdoc": "48.2.6",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-tailwindcss": "3.17.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "prompt-confirm": "2.0.4",
    "prettier": "3.2.5"
  },
  "pkg": {
    "scripts": ".next/standalone/**/*.*",
    "assets": "public/**/*.*",
    "targets": [
      "node18-linux-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
